.post-author-date{
    /*margin-top: 10rpx;
    margin-bottom: 20rpx;
    margin-left: 10rpx;*/
    margin: 10rpx 0 20rpx 10rpx;
}

.post-author{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.post-date{
    margin-left: 20rpx;
    vertical-align: middle;
}

.post-title{
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin: 0 0 10px 10px;
}

.post-image{
   width: 100%;
   height: 340rpx;
   margin: auto 0;
   margin-bottom: 15px; 
}

.post-content{
    font-size: 28rpx;
    color: #666;
    margin: 0 0 20rpx 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}

.post-like{
    font-size: 13px;
    line-height: 16px;
    margin-left: 10px;
}

.post-like-image{
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}

.post-like-font{
    vertical-align: middle;
    margin-right: 20rpx;
}