@import "../start/start-template.wxss";
.container{
    display: flex;
    flex-direction: column;
}

.head-img{
    width: 100%;
    height: 320rpx;
    -webkit-filter: blur(20rpx);
}


.head-img-hover{
    width: 100%;
    height: 320rpx;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
}

.main-title{
    font-size: 19rpx;
    color: #fff;
    font-weight: bold;
    margin-top: 50rpx;
    margin-left: 40rpx;
    letter-spacing: 2px;
}

.sub-title{
    font-size: 28rpx;
    color: #fff;
    margin-left: 40rpx;
    margin-top: 30rpx;
}

.like{
    display: flex;
    flex-direction: row;
    margin: 30rpx 0 0 40rpx;
}

.highlight-font{
    color: #f21146;
    font-size: 22rpx;
    margin-right: 10rpx;
}

.plain-font{
    color: #666;
    font-size: 22rpx;
    margin-right: 30rpx;
}

.movie-img{
    height: 238rpx;
    width: 175rpx;
    position: absolute;
    top: 160rpx;
    right: 30rpx;
}

.summary{
    margin: 40rpx 0 0 40rpx;
    color: #777;
}

.original-title{
    color: #1f3463;
    font-size: 24rpx;
    font-weight: bold;
    margin-bottom: 40rpx;

}

.flex-row{
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}

.mark{
    margin-right: 30rpx;
    white-space: nowrap;
    color: #999;
}

.hr{
    margin-right: 30rpx;
    height: 1rpx;
    width: 100%;
    background-color: #d9d9d9;
}

.synopsis{
    margin-left: 40rpx;
    display: flex;
    flex-direction: column;
    margin-top: 50rpx;
}

.synopsis-font{
    color: #999;
}

.sumnmary-content{
    margin: 20rpx 40rpx 0 0;
    line-height: 40rpx;
    letter-spacing: 1px;
}

.cast{
    margin: 50rpx 0 0 40rpx;
    display: flex;
    flex-direction: column;
}

.cast-font{
    color: #999;
    margin-bottom: 40rpx;
}

.cast-container{
    display: inline-flex;
    flex-direction: column;
    margin: 0 0 50rpx 40rpx;
    width: 170rpx;
    text-align: center;
    white-space: normal;
}

.cast-imgs{
    white-space: nowrap;
}

.cast-img{
    width: 170rpx;
    height: 210rpx;
}

.cast-name{
    margin: 10rpx auto 0;
}













































