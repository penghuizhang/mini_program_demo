<template name="post_item">
    <view class="post-container">      
        <view class="post-author-date">
            <image class="post-author" src="{{author_image}}"></image>
            <text class="post-date">{{date}}</text>
        </view>

        <text class="post-title">{{title}}</text>
        <image class="post-image" src="{{post_image}}"></image>
        <text class="post-content">{{content}}</text>

        <view class="post-like">
            <image class="post-like-image" src="{{post_like_image_url}}"></image>
            <text class="post-like-font">{{post_like_font}}</text>
            <image class="post-like-image" src="{{post_like_view_url}}"></image>
            <text class="post-like-font">{{post_like_view}}</text>
        </view>
    </view>
</template>